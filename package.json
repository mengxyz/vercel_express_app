{
  "name": "express_template",
  "version": "1.0.0",
  "description": "Express application template using typescript and eslint",
  "repository": "https://github.com/Pidsamhai/express_template.git",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc && tsc-alias",
    "serve": "npx nodemon --exec 'ts-node -r tsconfig-paths/register src/index.ts'"
  },
  "author": "Pisamhai (พิสมัย)",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.12.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-rate-limit": "^6.2.0"
  }
}
